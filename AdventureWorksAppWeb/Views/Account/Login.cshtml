@model AdventureWorksAppWeb.Models.User

@{
    ViewBag.Title = "Inicio de Sesión";
}

<h2>Iniciar Sesión</h2>
<br />

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.LabelFor(m => m.UserName, new { @class = "form-label fw-bold" })
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", required = "true" })
        <div class="invalid-feedback">Por favor, ingresa tu nombre de usuario.</div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Password, new { @class = "form-label fw-bold" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "true" })
        <div class="invalid-feedback">Por favor, ingresa tu contraseña.</div>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
}