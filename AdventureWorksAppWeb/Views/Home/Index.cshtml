@model List<AdventureWorksAppWeb.Models.Photo>

@{
    ViewBag.Title = "Todas las Fotos";
}

<h2>Todas las Fotos</h2>

<div class="container photo-gallery">
    <div class="row">
        @foreach (var photo in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card" style="width: 18rem;">
                    <img src="@photo.ImagePath" class="card-img-top" alt="@photo.Title">
                    <div class="card-body">
                        <h5 class="card-title">@photo.Title</h5>
                        <p class="card-text">@photo.User.</p>
                        <p class="card-text">@photo.UploadDate</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>